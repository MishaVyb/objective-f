{
  "name": "excalidraw-app",
  "version": "1.0.0",
  "private": true,
  "homepage": ".",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all",
      "not safari < 12",
      "not kaios <= 2.5",
      "not edge < 79",
      "not chrome < 70",
      "not and_uc < 13",
      "not samsung < 10"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "prettier": "@excalidraw/prettier-config",
  "scripts": {

    "start": "yarn && vite",
    "start:host": "yarn && vite --host",
    "start:production": "yarn --production=false && vite --mode production",

    "build": "vite build && yarn build:version",
    "build:dev": "vite build --mode development && yarn build:version",
    "build:prod": "vite build --mode production && yarn build:version",
    "build:staging": "vite build --mode staging && yarn build:version",

    "build:app": "vite build",
    "build:app:docker": "vite build",
    "build:version": "node ../scripts/build-version.js",

    "build:preview": "yarn build && vite preview --port 5000",
    "build-node": "node ./scripts/build-node.js"

  }
}
